<h1>登録済み施設一覧</h1>

        <table>
           <thead>
             <tr>
                <th>id</th>
                <th>画像</th>
                <th>施設名</th>
                <th>紹介文</th>
                <th>料金/日</th>
                <th>作成日</th>
             </tr>
           </thead>

         <tbody>
           <% @rooms.each do |room| %>
             <tr>
                <td><%= room.id %></td>
                <td><% if room.image? %>
                      <%= image_tag room.image.url %>
                      <% else %>
                      <%= image_tag ("/sisetu.png") %>
                    <% end %>
                </td>
                <td class="room-name"><%= link_to room.name, room_path(room), style: "color: black;" %></td>
                <td><%= room.introduction %></td>
                <td><%= room.price %></td>
                <td><%= room.created_at.strftime("%Y/%m/%d") %></td>
             </tr>
           <% end %>
         </tbody>
          </table>
</div>

 <style>
table th {
   background-color: #fbc25b;
   padding: 10px 20px;
 }
table img{
  width: 350px;
  height: 250px;

 }
 
 table td {
   background-color: #f9ecd5;
   padding: 10px 20px;
 }
 
 
 .notice {
   background-color: #ccf;
   padding: 5px;
 }
 </style>
